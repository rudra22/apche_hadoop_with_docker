<?xml version="1.0"?>
<configuration>
    <!-- Default Filesystem -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://localhost:9000</value>
    </property>

    <!-- (Optional) Hadoop temp directory -->
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/opt/hadoop/tmp</value>
    </property>

    <!-- (Optional) I/O File Buffer Size -->
    <property>
        <name>io.file.buffer.size</name>
        <value>131072</value>
    </property>
</configuration>
