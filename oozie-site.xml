<?xml version="1.0"?>
<configuration>
    <!-- Oozie listening address -->
    <property>
        <name>oozie.base.url</name>
        <value>http://0.0.0.0:11000/oozie</value>
    </property>

    <!-- Oozie data directory -->
    <property>
        <name>oozie.service.WorkflowAppService.system.libpath</name>
        <value>/user/oozie/share/lib</value>
    </property>

    <!-- Database for Oozie -->
    <property>
        <name>oozie.db.schema.name</name>
        <value>oozie_db</value>
    </property>

    <!-- Example using embedded Derby -->
    <property>
        <name>oozie.service.JPAService.jdbc.url</name>
        <value>jdbc:derby:;databaseName=/opt/oozie/oozie_db;create=true</value>
    </property>
    <property>
        <name>oozie.service.JPAService.jdbc.driver</name>
        <value>org.apache.derby.jdbc.EmbeddedDriver</value>
    </property>
</configuration>
